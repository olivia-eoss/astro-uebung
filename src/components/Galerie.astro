---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  images: ImageMetadata[];
};

const { images } = Astro.props;
---

<div class="galerie">
  {
    images.map((img) => (
      <div class="galerie-item">
        <Image src={img} alt="Galeriebild" />
      </div>
    ))
  }
</div>

<style>
  .galerie {
    display: grid;
    height: auto;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin: 2rem 0;
  }

  .galerie-item {
    width: 100%;
    aspect-ratio: 16 / 9; /* Verhältnis: Breite / Höhe */
    overflow: hidden;
    border-radius: 10px;
  }

  .galerie-item img {
    width: 100%;
    height: 100%;
    border-radius: 10px;
    object-fit: cover;
    object-position: center;
  }
</style>
